<div class="container rounded bg-white mt-5 mb-5">
  <div class="row">
    <div class="col-md-4 border-right bg-light">
      <div class="d-flex flex-column align-items-center text-center p-3 py-5">
      <%= image_tag(@user.avatar, class: "rounded-circle mt-5 mb-2", width: "150", height: "150") %>
        <span class="font-weight-bold"><%= @user.full_name%></span>
        <span class=" badge bg-secondary text-white ps-3 pe-3 mb-3"><%= @user.email%></span>
        
        <% if current_user.not_friend_with?(@user.id) %>
            <%= link_to "Add Friend", friendships_path(friend: @user), class: 'btn btn-success btn-sm ', method: :post %>
          <% else %>
            <span class="badge bg-dark">You are friends</span>
        <% end %> 

      </div>
    </div>

    <div class="col-md-8 border-right">
      <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-right">User stocks</h4>
        </div>

          <% if !@tracked.empty?%>
            <%= render "stock/list" %>
            <% else%>
            <p class="badge bg-dark">This user is not tracking any stock</p>
          <% end %>
      </div>
    </div>

</div>