<header>
    <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-5 border-bottom">
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal">My Portfolio</h1>
      <p class="fs-5 text-muted">Quickly build an effective pricing table for your potential customers.</p>
    </div>
</header>


<form action="<%= search_path %>" data-remote="true" method="get">
 <div class="row">

  <div class="col-sm-8 mx-auto d-flex">
    <input class="form-control form-control-lg" name="stock" id="stock" type="search" placeholder="Search Stocks by Symbol" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search  </button>
  </div>
  
  <div class="row mt-4">
    <div class="col-sm-10 mx-auto d-flex">
      <div id="result">
      </div>
    </div>
  </div>

   <div class="row mt-4">
    <div class="col-sm-10 mx-auto d-flex">
      <% if !@tracked.empty?%>
        <%= render "stock/list" %>
      <% end %>
    </div>
  </div>
  </div>
 </div>
</form> 

