<header>
    <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-5 border-bottom">
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal">My Friends</h1>
      <p class="fs-5 text-muted">Quickly build an effective pricing table for your potential customers.</p>
    </div>
</header>
<div class="row">
  <div class="col-sm-6 mx-auto mb-0">
    <h3 class="mb-0">
    Search friends 
    </h3> 
  </div>
</div>

<form action="<%= search_friend_path %>" data-remote="true" method="get">
  <div class="row mt-4">
    <div class="col-sm-6 mx-auto d-flex">
      <input class="form-control form-control-lg" name="friend" id="friend" type="search" placeholder="Search friends" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </div>

    <div class="row mt-3">
      <div class="col-sm-10 mx-auto d-flex">
        <div id="friend-results">
        </div>
      </div>
    </div>

    <div class="col-sm-10 mx-auto d-flex mt-3">
    <% if !@friends.empty?%>
      <%= render "shared/list" %>
      <% end %>
    </div>
  </div>
</form>