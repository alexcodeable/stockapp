<table class="table table-bordered table-hover table-sm">
  <thead>
    <tr>
    <th scope="col">Email Address</th>
    <th scope="col">Full Name</th>
    <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do | friend | %>
    <tr>
    <td class=""><%= friend.email %></td>
    <td><%= friend.name %></td>
    <td><%= link_to "unfollow", friendship_path(friend), class: 'badge bg-danger lk badge-sm', method: :delete, data: {confirm: 'Do you want to stop following this friend?'} %>
        <%= link_to "View Profile", user_path(friend), class: 'badge bg-secondary lk ms-3'%></td>
    </tr>
  <% end %>
  </tbody>
</table>